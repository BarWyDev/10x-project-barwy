            <a href="/app" class="text-gray-700 hover:text-gray-900 font-medium transition-colors">
              Moje Fiszki
            </a>
            <a href="/app/decks" class="text-gray-700 hover:text-gray-900 font-medium transition-colors">
              Talie
            </a>
          </nav>

          <!-- User Actions -->
          <div class="flex items-center gap-4">
            <LogoutButton client:load />
          </div>
        </div>
