---
/**
 * AuthLayout - Minimalistyczny layout dla stron publicznych
 * Używany dla: login, register, forgot-password, reset-password
 * Nie zawiera nawigacji ani elementów dla zalogowanych użytkowników
 */
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "Autentykacja - Generator Fiszek" } = Astro.props;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 flex items-center justify-center p-4">
      <slot />
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>


